<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.bbugdigger.runcustomexecutables</id>
    <name>Run Custom Executables</name>
    <vendor>bbugdigger</vendor>

    <!-- Required dependency for platform APIs -->
    <depends>com.intellij.modules.platform</depends>

    <description><![CDATA[
    A simple Run Configuration plugin to run custom executables.
    
    <h3>Features:</h3>
    <ul>
        <li>Run predefined executables: Rust Compiler (rustc) or Cargo from PATH</li>
        <li>Run any custom executable from your local filesystem</li>
        <li>Pass arguments to the executable</li>
    </ul>
    ]]></description>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Register the custom executable run configuration type -->
        <configurationType 
            implementation="com.github.bbugdigger.runcustomexecutables.runconfig.CustomExecutableConfigurationType"/>
    </extensions>
</idea-plugin>
